---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Section from '../../components/articles/Section.astro';
import SectionIntro from '../../components/articles/SectionIntro.astro';
import ColorBlock from '../../components/articles/ColorBlock.astro';
import DecisionItem from '../../components/articles/DecisionItem.astro';
import ClosingBlock from '../../components/articles/ClosingBlock.astro';
import SidebarBox from '../../components/articles/SidebarBox.astro';
import PillarCard from '../../components/articles/PillarCard.astro';
import Callout from '../../components/articles/Callout.astro';
import KeyPoint from '../../components/articles/KeyPoint.astro';
import CodeBlock from '../../components/articles/CodeBlock.astro';
import { getArticleSchema, getBreadcrumbSchema, BreadcrumbItems } from '../../utils/schema';

export async function getStaticPaths() {
  const articles = await getCollection('articles', ({ data }) => {
    return data.draft !== true;
  });

  return articles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;

// Render the MDX content
const { Content, remarkPluginFrontmatter } = await article.render();

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  const months = ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'];
  return `${date.getDate()} ${months[date.getMonth()]} ${date.getFullYear()}`;
}

function getCategoryLabel(category: string): string {
  return category === 'reflexion' ? 'Réflexion' : 'Analyse';
}

const siteUrl = 'https://julien-brionne.fr';
const articleUrl = `${siteUrl}/articles/${article.slug}`;
const ogImage = article.data.thumbnail ? article.data.thumbnail : undefined;
const twitterCard = ogImage ? 'summary_large_image' : 'summary';

// Generate article schema using utility function
const articleSchema = getArticleSchema(
  articleUrl,
  article.data.title,
  article.data.excerpt,
  article.data.date,
  article.data.date, // dateModified defaults to datePublished
  undefined, // about - can be added per article if needed
  article.data.thumbnail
);

// Generate breadcrumb schema
const breadcrumbSchema = getBreadcrumbSchema([
  BreadcrumbItems.home,
  BreadcrumbItems.articles,
  BreadcrumbItems.article(article.data.title, articleUrl),
]);
---

<Layout
  title={`${article.data.title} — Julien Brionne`}
  description={article.data.excerpt}
  ogTitle={article.data.title}
  ogDescription={article.data.excerpt}
  ogType="article"
  ogImage={ogImage}
  ogUrl={articleUrl}
  twitterCard={twitterCard}
  twitterTitle={article.data.title}
  twitterDescription={article.data.excerpt}
  articleSchema={articleSchema}
  breadcrumbSchema={breadcrumbSchema}
>
  <Navbar currentPage="articles" />
  <main>
    <article class="max-w-[1150px] mx-auto px-8 py-20">
      <div class="max-w-3xl mx-auto mb-8">
        <div class="flex items-center gap-3 mb-6">
          <time class="font-mono text-[#C5A070] text-sm">{formatDate(article.data.date)}</time>
          <span class="font-mono text-[9px] text-gray-300">/ {getCategoryLabel(article.data.category)}</span>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif leading-tight mb-8">
          {article.data.title}
        </h1>
        <p class="text-xl text-gray-600 leading-relaxed font-light italic mb-4">
          {article.data.excerpt}
        </p>
        <p class="text-sm text-gray-500 font-light italic">
          Pour comprendre la posture d'intervention, voir <a href="/approche" class="underline hover:text-gray-700 transition-colors">Mon approche</a>.
        </p>
      </div>

      <div class="pt-8 border-t border-black/5">
        <Content components={{ Section, SectionIntro, ColorBlock, DecisionItem, ClosingBlock, SidebarBox, PillarCard, Callout, KeyPoint, CodeBlock }} />
      </div>

      <div class="max-w-3xl mx-auto mt-16 pt-8 border-t border-black/5">
        <a href="/articles" class="back-link font-mono text-sm text-gray-500 hover:text-black transition-colors">
          Retour aux articles
        </a>
      </div>
    </article>
  </main>
</Layout>
