---
interface Props {
  number: string;
  title: string;
}

const { number, title } = Astro.props;
---

<div class="flex gap-8 items-start">
  <span class="text-2xl font-sans text-gray-700 font-medium tracking-tight flex-shrink-0">{number}</span>
  <div class="flex-1">
    <p class="text-xl text-gray-900 leading-relaxed font-normal mb-0">
      <span class="font-bold text-gray-900">{title}</span>
      <span class="text-gray-600 font-normal"> <slot /></span>
    </p>
  </div>
</div>
