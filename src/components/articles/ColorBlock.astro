---
interface Props {
  bgColor?: 'blue' | 'clay';
  label?: string;
  title?: string;
  className?: string;
}

const { bgColor = 'blue', label, title, className = '' } = Astro.props;

const bgClass = bgColor === 'clay' ? 'article-color-block-clay' : 'article-color-block-blue';
const labelColorClass = bgColor === 'clay' ? 'text-clay' : 'text-gray-400';
const paddingClass = bgColor === 'clay' ? 'py-24 p-12' : 'py-32';
---

<section class={`full-width-section ${bgClass} ${paddingClass} mb-32 relative overflow-hidden reveal ${className}`}>
  {bgColor === 'blue' && <div class="blob-article blob-article-small bg-blue-light organic-shape"></div>}
  <div class="max-w-2xl mx-auto">
    {label && <div class={`font-mono mb-8 ${labelColorClass} article-label`}>{label}</div>}
    {title && <h2 class="text-4xl mb-10 font-serif italic">{title}</h2>}
    <slot />
  </div>
</section>
