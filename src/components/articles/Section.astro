---
interface Props {
  label?: string;
  title?: string;
  quote?: string;
  maxWidth?: string;
  className?: string;
}

const { label, title, quote, maxWidth = '2xl', className = '' } = Astro.props;
---

<section class={`max-w-${maxWidth} mx-auto mb-32 reveal ${className}`}>
  {label && <div class="font-mono mb-8 text-gray-400 article-label">{label}</div>}
  {quote && (
    <p class="text-2xl leading-relaxed text-gray-800 font-serif italic mb-12">
      "{quote}"
    </p>
  )}
  {title && <h2 class="text-3xl md:text-4xl mb-12 font-serif italic">{title}</h2>}
  <slot />
</section>
