---
interface Props {
  label?: string;
  title?: string;
  quote?: string;
  maxWidth?: '2xl' | '3xl';
  titleSize?: 'default' | 'large';
  className?: string;
}

const { label, title, quote, maxWidth = '2xl', titleSize = 'default', className = '' } = Astro.props;
const maxWidthClass = maxWidth === '3xl' ? 'max-w-3xl' : 'max-w-2xl';
const titleClass = titleSize === 'large'
  ? 'text-5xl mb-12 font-serif font-bold'
  : 'text-3xl md:text-4xl mb-12 font-serif italic';
---

<section class={`${maxWidthClass} mx-auto mb-32 reveal ${className}`}>
  {label && <div class="font-mono mb-8 text-gray-400 article-label">{label}</div>}
  {quote && (
    <p class="text-2xl leading-relaxed text-gray-800 font-serif italic mb-12">
      "{quote}"
    </p>
  )}
  {title && <h2 class={titleClass}>{title}</h2>}
  <slot />
</section>
