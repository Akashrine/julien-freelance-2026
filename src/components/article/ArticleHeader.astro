---
interface Props {
  label: string;
  intro: string;
}

const { label, intro } = Astro.props;
---

<div class="article-header mb-16">
  <div class="font-mono text-[10px] text-gray-400 tracking-[0.2em] mb-8">{label}</div>
  <p class="text-2xl md:text-3xl text-gray-700 italic font-serif leading-relaxed">
    {intro}
  </p>
</div>